{
  "name": "learn-tape",
  "version": "2.0.6",
  "repository": {
    "type": "git",
    "url": "https://github.com/dwyl/learn-tape.git"
  },
  "description": "Simple Test Driven Development (TDD) Tutorial using Tape",
  "author": "dwyl & friends!",
  "devDependencies": {
    "browserify": "^16.5.0",
    "jsdom": "^15.2.0",
    "nyc": "^14.1.1",
    "pre-commit": "^1.2.2",
    "tap": "^14.7.1",
    "tap-nyc": "^1.0.3",
    "tape": "^4.11.0",
    "testling": "^1.7.1"
  },
  "scripts": {
    "test": "nyc tape ./test/*.test.js | tap-nyc",
    "front-end-test": "tape ./front-end-testing/test-complete/* | tap-nyc"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "include": [
      "lib/**/*.js"
    ],
    "exclude": [
      "test/**/*.spec.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "cache": false,
    "all": true,
    "report-dir": "./coverage"
  },
  "pre-commit": [
    "coverage",
    "front-end-coverage-complete"
  ],
  "license": "MIT",
  "keywords": [
    "tape",
    "tap",
    "tutorial",
    "how to"
  ]
}
